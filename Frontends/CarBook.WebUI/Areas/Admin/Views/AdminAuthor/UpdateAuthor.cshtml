@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yazar Güncelleme</h4>

                        <form method="post">
                            <input type="hidden" asp-for="authorId" />
                            <div class="form-group">
                                <label for="exampleInputName">İsim</label>
                                <input type="text" class="form-control" id="exampleInputName" placeholder="İsim" asp-for="name">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDesc">Açıklama</label>
                                <textarea rows="5" asp-for="description" class="form-control" id="exampleInputDesc" placeholder="Açıklama"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputImageUrl">Görsel Yolu</label>
                                <input type="text" class="form-control" id="exampleInputImageUrl" placeholder="Görsel Yolu" asp-for="imageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>