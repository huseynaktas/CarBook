@model ResultLocationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 block-9 mb-md-5">
                <form class="bg-light p-5 contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" readonly placeholder="Almak İstediğiniz Araç">
                    </div>
                    <div class="form-group">
                        <label>Adınız</label>
                        <input type="text" class="form-control" placeholder="Adınız">
                    </div>
                    <div class="form-group">
                        <label>Soyadınız</label>
                        <input type="text" class="form-control" placeholder="Soyadınız">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Mail Adresiniz">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Telefon Numaranız">
                    </div>
                    <div class="form-group">
                        <label>Alınmak İstenen Lokasyon</label>
                        @Html.DropDownListFor(x => x.locationId, (List<SelectListItem>)ViewBag.selectedItemReservationLocation, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>İade Edilecek Lokasyon</label>
                        @Html.DropDownListFor(x => x.locationId, (List<SelectListItem>)ViewBag.selectedItemReservationLocation, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Yaşınız">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Ehliyet Yılınız">
                    </div>
                    <div class="form-group">
                        <textarea name="" id="" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <div class="form-group">
                            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>