@model CreateReservationDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 block-9 mb-md-5">
                <form class="bg-light p-5 contact-form" method="post">
                    <input type="hidden" asp-for="carId" value="@ViewBag.carId" class="form-control" placeholder="Almak İstediğiniz Araç">
                    <div class="form-group">
                        <input type="text" asp-for="name" class="form-control" placeholder="Adınız">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="surname" class="form-control" placeholder="Soyadınız">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="emailAddress" class="form-control" placeholder="Mail Adresiniz">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="phone" class="form-control" placeholder="Telefon Numaranız">
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(x => x.dropOffLocationId, (List<SelectListItem>)ViewBag.selectedItemReservationLocation, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(x => x.pickUpLocationId, (List<SelectListItem>)ViewBag.selectedItemReservationLocation, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="age" class="form-control" placeholder="Yaşınız">
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="driverLicenseYear" class="form-control" placeholder="Ehliyet Yılınız">
                    </div>
                    <div class="form-group">
                        <textarea id="" asp-for="description" cols="30" rows="7" class="form-control" placeholder="Varsa Eklemek İstedikleriniz"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <div class="form-group">
                            <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>