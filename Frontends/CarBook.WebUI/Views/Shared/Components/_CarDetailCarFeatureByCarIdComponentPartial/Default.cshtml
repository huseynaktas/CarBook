@model List<ResultCarFeatureByCarIdDto>

@* Araba Özellikleri Kısmı *@
<div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
    <div class="row">
        @for (int i = 0; i < Math.Ceiling((double)Model.Count / 5); i++)
        {
            <div class="col-md-4">
                <ul class="features">
                    @for (int x = i * 5; x < Math.Min((i + 1) * 5, Model.Count); x++)
                    {
                        <li class="@(Model[x].available ? "check" : "remove")">
                            <span class="ion-ios-@(Model[x].available ? "checkmark" : "close")"></span>
                            @Model[x].featureName
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>		